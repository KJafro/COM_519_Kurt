    <h3>
    There are many misconceptions when it comes to the Body Mass Index
    </h3>
    <h5>This website is designed to give a better understanding of body composition</h6>
    <h5>Click <a href="about">here</a> for more information!</h6>

          <hr>
          <div class="container">
            <h1>BMI Calculator</h1>
            <div class="display">
                      <p id="result" style="color: #0be881">21.6</p>
                      <p id="category">Normal Weight üòç</p>
            </div>
              <div class="center">
                  <input type="range" min="20" max="200" value="70" id="weight" oninput="calculate()">
                  <span id="weight-val">70 kg</span>
              </div>
              <div class="center">
                  <input type="range" min="100" max="250" value="180" id="height" oninput="calculate()">
                  <span id="height-val">180 cm</span>
              </div>
      
      
          </div>
        </div>
      </section>
    </main>

    <!-- BMI Calculation -->
    <script type="text/javascript">
      function calculate(){
          var bmi;
          var result = document.getElementById("result");
      
          var weight = parseInt(document.getElementById("weight").value);
          document.getElementById("weight-val").textContent = weight + " kg";
      
          var height = parseInt(document.getElementById("height").value);
          document.getElementById("height-val").textContent = height + " cm";
      
          bmi = (weight / Math.pow( (height/100), 2 )).toFixed(1);
          result.textContent = bmi;
      
          if(bmi < 18.5){
              category = "Underweight üòí";
              result.style.color = "#ffc44d";
          }
          else if( bmi >= 18.5 && bmi <= 24.9 ){
              category = "Normal Weight üòç";
              result.style.color = "#0be881";
          }
          else if( bmi >= 25 && bmi <= 29.9 ){
              category = "Overweight üòÆ";
              result.style.color = "#ff884d";
          }
          else{
              category = "Obese üò±";
              result.style.color = "#ff5e57";
          }
          document.getElementById("category").textContent = category;
      }
          </script>
          
