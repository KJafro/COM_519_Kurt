<!DOCTYPE html>
<html lang="en">
  <html lang="en">
    <head>
      <meta charset="utf-8" />
      <meta
        name="viewport"
        content="width=device-width, initial-scale=1, shrink-to-fit=no"
      />
      <meta name="description" content="" />
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
      <title>Atletas - Entries</title>
      
      <link
        rel="canonical"
        href="https://getbootstrap.com/docs/4.5/examples/album/"
      />

      <!-- Bootstrap core CSS -->
      <link
        rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
        crossorigin="anonymous"
      />

      <link href="css/album.css" rel="stylesheet" />
    </head>
    <body>
      <%- include('common/header'); -%>
      
      <section class="jumbotron text-center">
        <img src="/images/addent.jfif" style= "width: 200px; height: 200px; float:inline-start;margin-bottom:-50px">
      <div class="container">
        <hr>
        <div class="row justify-content-md-center">
          <div class="col-">
            <form method="POST" action="/create-entries">

              <div class="form-group">
                <label for="title"></label>
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  name="title"
                  placeholder="Enter Full Name"
                />

                <% if (errors['profile_name']) { %>
                <p style="color: red"><%= errors['profile_name'].message %></p>
                <% } %>
              </div>

              <div class="form-group">
                
                <input
                  type="text"
                  class="form-control"
                  id="gender"
                  name="gender"
                  placeholder="Enter Gender (M/F)"
                />
                <% if (errors['gender']) { %>
                  <p style="color: red"><%= errors['gender'].message %></p>
                  <% } %>
                </div>

              <div class="form-group">
                
                <input
                  type="number"
                  class="form-control"
                  id="name"
                  name="height"
                  placeholder="Enter Height (cm)"
                />
                <% if (errors['height']) { %>
                  <p style="color: red"><%= errors['height'].message %></p>
                  <% } %>
                </div>

                <div class="form-group">
                  
                  <input
                    type="number"
                    class="form-control"
                    id="name"
                    name="weight"
                    placeholder="Enter Weight (kg)"
                  />
                  <% if (errors['weight']) { %>
                    <p style="color: red"><%= errors['weight'].message %></p>
                    <% } %>
              </div>


                <div class="form-group">
                  
                  <input
                    type="number"
                    class="form-control"
                    id="bodyfat"
                    name="bodyfat"
                    placeholder="Enter Bodyfat (%)"
                  />
                  <% if (errors['bodyfat']) { %>
                    <p style="color: red"><%= errors['bodyfat'].message %></p>
                    <% } %>
              </div>

              <div class="form-group">
                
                <input
                  type="number"
                  class="form-control"
                  id="bmi"
                  name="bmi"
                  placeholder="Enter BMI"
                />
                <% if (errors['bmi']) { %>
                  <p style="color: red"><%= errors['bmi'].message %></p>
                  <% } %>
            </div>

              <div class="form-group">
                <b><label for="exampleFormControlSelect1">Select Profile</label></b>
                <select
                  class="form-control"
                  name="profiles_id"
                  id="exampleFormControlSelect1"
                >
                  <% profiles.forEach( profiles => { %>

                  <option value="<%= profiles._id %>"><%= profiles.name %></option>

                  <% }) %>
                </select>
              </div>
              <div class="container">
              <div style="display: flex; justify-content: center"><button type="submit" onclick= "fun()" class="btn btn-primary">Submit</button></div>
              </div>
              <script>
                function fun(){
                 alert("Successfully added entry!");
                }
              </script>

            </section>
            </form>
          </div>
        </div>
      </div>
      <%- include('common/footer'); -%>
    </body>
  </html>
</html>
